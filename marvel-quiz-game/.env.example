# Marvel API Configuration
# Get your API keys from https://developer.marvel.com/

# Marvel API Keys (Required)
VITE_MARVEL_PUBLIC_KEY=your_marvel_public_key_here
MARVEL_PRIVATE_KEY=your_marvel_private_key_here

# Marvel Quiz Configuration
VITE_MARVEL_QUIZ_ENABLED=true
VITE_MARVEL_CACHE_DURATION=3600000

# Application Settings
VITE_APP_TITLE=Marvel Universe Quiz
VITE_APP_DESCRIPTION=Test your Marvel knowledge with this interactive quiz

# Performance Settings
VITE_API_TIMEOUT=10000
VITE_MAX_RETRIES=3

# Feature Flags
VITE_ENABLE_SOUND=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_LEADERBOARD=true
VITE_ENABLE_ACHIEVEMENTS=true

# Analytics (Optional)
VITE_GA_TRACKING_ID=your_google_analytics_id
VITE_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false