  "shortcuts": [
    {
      "name": "Quick Quiz",
      "short_name": "Quiz",
      "description": "Start a quick Marvel quiz",
      "url": "./index.html?mode=quick",
      "icons": [
        {
          "src": "./icons/shortcut-quiz.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Challenge Mode",
      "short_name": "Challenge",
      "description": "Take on the ultimate Marvel challenge",
      "url": "./index.html?mode=challenge",
      "icons": [
        {
          "src": "./icons/shortcut-challenge.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Leaderboard",
      "short_name": "Scores",
      "description": "View top scores and achievements",
      "url": "./index.html?view=leaderboard",
      "icons": [
        {
          "src": "./icons/shortcut-leaderboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://marvel-quiz-ultimate.vercel.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+marvelquiz",
      "url": "./index.html?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "./index.html?import=true",
      "accept": {
        "application/json": [".json"]
      },
      "icons": [
        {
          "src": "./icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "./index.html?share=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "quiz_data",
          "accept": ["application/json", ".json"]
        }
      ]
    }
  },
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  "id": "ultimate-marvel-quiz",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}