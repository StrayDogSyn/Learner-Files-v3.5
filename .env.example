# StrayDog Syndications Portfolio - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Analytics Configuration
# Google Analytics 4 Measurement ID (format: G-XXXXXXXXXX)
VITE_GA4_MEASUREMENT_ID=

# Plausible Analytics Domain (your website domain)
VITE_PLAUSIBLE_DOMAIN=

# GitHub Configuration
# GitHub username for API calls (used in GitHubActivity component)
VITE_GITHUB_USERNAME=StrayDogSyn

# Contact Information
VITE_CONTACT_EMAIL=contact@straydogsyndications.com

# Feature Flags
# Enable/disable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=true

# Marvel API Configuration
# Get your API keys from https://developer.marvel.com/
# Public key (safe to expose in frontend)
VITE_MARVEL_PUBLIC_KEY=
# Private key (keep secret, used for hash generation)
MARVEL_PRIVATE_KEY=

# Marvel Quiz Configuration
# Enable/disable Marvel Quiz features
VITE_ENABLE_MARVEL_QUIZ=true
# Cache duration for Marvel API responses (in milliseconds)
VITE_MARVEL_CACHE_DURATION=3600000

# Enable/disable heatmap tracking (true/false)
VITE_ENABLE_HEATMAP=true

# Enable/disable error tracking (true/false)
VITE_ENABLE_ERROR_TRACKING=true

# Performance Monitoring
# Enable/disable performance tracking (true/false)
VITE_ENABLE_PERFORMANCE_TRACKING=true

# Development Settings
# Show analytics debug logs in development (true/false)
VITE_ANALYTICS_DEBUG=false

# API Configuration
# GitHub API base URL (usually https://api.github.com)
VITE_GITHUB_API_BASE=https://api.github.com

# Rate limiting for GitHub API calls (requests per hour)
VITE_GITHUB_RATE_LIMIT=60

# Brand Configuration
# Brand name for analytics events
VITE_BRAND_NAME="StrayDog Syndications"

# Portfolio version for tracking
VITE_PORTFOLIO_VERSION=2.0.0

# Social Media Links
VITE_GITHUB_URL=https://github.com/StrayDogSyn
VITE_LINKEDIN_URL=https://linkedin.com
VITE_TWITTER_URL=
VITE_DRIBBBLE_URL=
VITE_BEHANCE_URL=

# AI Configuration
# Anthropic API Key for Claude AI integration
ANTHROPIC_API_KEY=

# SEO Configuration
VITE_SITE_URL=https://straydogsyndications.com
VITE_SITE_DESCRIPTION="From Kitchen to Code: 20+ Years of Excellence - StrayDog Syndications Portfolio"
VITE_SITE_KEYWORDS="software developer,javascript,ai ml,portfolio,full stack developer,eric petross,hunter petross"