{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "responsive",
          "screen",
          "variants"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "backdrop-filter",
          "-webkit-backdrop-filter",
          "scrollbar-width",
          "scrollbar-color",
          "overscroll-behavior"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "max-nesting-depth": 4,
    "length-zero-no-unit": true,
    "value-keyword-case": "lower"
  },
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*"
  ]
}
