# Trae SOLO + Claude 4.1 API Integration Environment Variables
# Copy this file to .env.claude-solo and fill in your actual values

# =============================================================================
# CLAUDE API CONFIGURATION
# =============================================================================

# Anthropic API Key (Required)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude API Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=30000

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================

# GitHub Personal Access Token (Required)
# Scopes needed: repo, workflow, admin:repo_hook
GITHUB_TOKEN=your_github_token_here

# GitHub Configuration
GITHUB_USERNAME=your_github_username
GITHUB_ORGANIZATION=straydogsyndications
CONTENT_REPO=straydogsyndications/portfolio-content
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# PORTFOLIO CONFIGURATION
# =============================================================================

# Portfolio URLs
PORTFOLIO_BASE_URL=https://straydog-syndications-llc.com
BUSINESS_DOMAIN=https://straydogsyndicationsllc.biz
ORGANIZATION_DOMAIN=https://straydog-secondstory.org
GITHUB_PAGES_DOMAIN=https://straydogsyndications.github.io

# Portfolio API Endpoints
PORTFOLIO_API_ENDPOINT=${PORTFOLIO_BASE_URL}/api
ANALYTICS_ENDPOINT=${PORTFOLIO_API_ENDPOINT}/analytics
PROJECTS_ENDPOINT=${PORTFOLIO_API_ENDPOINT}/projects

# =============================================================================
# TRAE CONFIGURATION
# =============================================================================

# Trae Webhook URLs
TRAE_WEBHOOK_URL=https://your-trae-instance.com/webhooks
TRAE_API_KEY=your_trae_api_key_here
TRAE_PROJECT_ID=your_trae_project_id_here

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_DEV_ALERTS=#dev-alerts
SLACK_CHANNEL_SEO_UPDATES=#seo-updates
SLACK_CHANNEL_DOCUMENTATION=#documentation
SLACK_CHANNEL_MARKETING=#marketing
SLACK_CHANNEL_CODE_QUALITY=#code-quality

# Email Notifications
DEVELOPER_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_ANALYTICS_API_KEY=your_ga_api_key

# Google Search Console
GSC_API_KEY=your_google_search_console_api_key
GSC_SITE_URL=${PORTFOLIO_BASE_URL}

# Lighthouse CI
LIGHTHOUSE_CI_SERVER_URL=https://your-lighthouse-ci-server.com
LIGHTHOUSE_CI_TOKEN=your_lighthouse_ci_token

# Real User Monitoring
RUM_ENDPOINT=https://your-rum-service.com/api
RUM_API_KEY=your_rum_api_key

# =============================================================================
# SEO AND CONTENT TOOLS
# =============================================================================

# SEMrush API
SEMRUSH_API_KEY=your_semrush_api_key

# Ahrefs API (Optional)
AHREFS_API_KEY=your_ahrefs_api_key

# Content Management
CONTENT_CDN_URL=https://your-cdn.com
IMAGE_OPTIMIZATION_SERVICE=https://your-image-service.com

# =============================================================================
# SOCIAL MEDIA AUTOMATION
# =============================================================================

# Twitter API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Social Media Scheduler
SOCIAL_MEDIA_SCHEDULER_API=https://your-scheduler-api.com
SOCIAL_MEDIA_SCHEDULER_TOKEN=your_scheduler_token

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Portfolio-Claude-SOLO

# Datadog (Optional)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# =============================================================================
# DATABASE AND STORAGE
# =============================================================================

# Database (if using external storage)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://username:password@host:port

# Cloud Storage (for backups and assets)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=${PORTFOLIO_BASE_URL}
CORS_CREDENTIALS=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Environment
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info

# Testing
TEST_ANTHROPIC_API_KEY=your_test_api_key
TEST_GITHUB_TOKEN=your_test_github_token

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Zapier (for additional automation)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook

# IFTTT (alternative automation)
IFTTT_WEBHOOK_KEY=your_ifttt_webhook_key

# Discord (alternative notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook

# Telegram (alternative notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=.trae/backups

# Recovery Settings
AUTO_RECOVERY_ENABLED=true
RECOVERY_NOTIFICATION_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_CODE_REVIEW_AGENT=true
ENABLE_CONTENT_GENERATOR=true
ENABLE_SEO_OPTIMIZER=true
ENABLE_PERFORMANCE_ANALYZER=true
ENABLE_SOCIAL_MEDIA_AUTOMATION=true
ENABLE_DOCUMENTATION_GENERATION=true
ENABLE_BLOG_POST_AUTOMATION=true
ENABLE_META_CONTENT_AUTOMATION=true

# Advanced Features
ENABLE_MACHINE_LEARNING_INSIGHTS=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_A_B_TESTING=false
ENABLE_ADVANCED_SEO_ANALYSIS=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Custom API Endpoints
CUSTOM_API_ENDPOINT_1=https://your-custom-api.com
CUSTOM_API_KEY_1=your_custom_api_key

# Custom Webhooks
CUSTOM_WEBHOOK_URL_1=https://your-custom-webhook.com
CUSTOM_WEBHOOK_SECRET_1=your_custom_webhook_secret

# =============================================================================
# NOTES AND INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env.claude-solo
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit the actual .env file to version control
# 4. Ensure all required API keys are obtained and have proper permissions
# 5. Test the configuration with npm run test:config
# 6. Monitor the logs for any authentication or permission errors
# 7. Regularly rotate API keys and secrets for security

